<% title "Post" %>

<div class="container">
	<div class="row">

	    <div class="col-md-8 col-md-offset-0">
        <div class="post_area">

    		<form action="" method="POST" >



    		    <div class="form-group">
    		        <label for="location">Location: <span class="require"><%= @post.location %></span></label>
    		    </div>

            <div class="form-group">
    		        <label for="country">Country: <span class="require"><%= @post.country %></span></label>
    		    </div>

            <div class="form-group">
    		        <label for="city">City: <span class="require"><%= @post.city %></span></label>
    		    </div>

    		    <div class="form-group" >
    		        <label for="description">Description: </label>
                <div class="post_text">
                  <%= @post.description %>
                </div>
    		    </div>


            <div class="imagen_area" style="text-align: center">
							<div class="col-md-3 col-lg-3" align="center" style="width:150">
								<%= image_tag(@post.image, style:'width:100%')  if @post.image.attached?%>


								</div>
              <img src="https://cdn0.iconfinder.com/data/icons/mobile-development-svg-icons/60/Low_signal-512.png" width=100px height=100px >

              <img src="data:image/png;base64," width=100px height=100px>

              <img src="https://www.mockupworld.co/wp-content/uploads/edd/2018/01/free-male-hand-holding-iphone-x-mockup-psd-1000x683.jpg" width=100px height=100px>

            </div>
    		</form>
        </div>

        <div class="container">
          <div class="row">
            <div class="col-sm-12">
              <h3>Comments</h3>
            </div><!-- /col-sm-12 -->
          </div><!-- /row -->
          <div class="row">
            <div class="col-sm-1">
              <div class="thumbnail">
                <img class="img-responsive user-photo" src="http://www.31minutos.cl/wp-content/uploads/2014/02/thumb-bodoque-300x300.jpg">
              </div><!-- /thumbnail -->
            </div><!-- /col-sm-1 -->

            <div class="col-sm-5">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <strong>Juan Carlos Bodoque</strong> <span class="text-muted">commented 5 days ago</span>
                </div>
                  <div class="panel-body">
                  Nunca habia visto tanta caca junta.
                </div><!-- /panel-body -->
              </div><!-- /panel panel-default -->
            </div><!-- /col-sm-5 -->

          </div><!-- /container -->
          </div>

		</div>

		<div class="col-md-4 col-md-offset-0">
      <div class="related_area">



  			<form action="" method="POST">

            <div class="form-group">
              <h1>Related Post</h1>
            </div>

  					<div class="form-group">

  							<figure class="img-responsive">

  	            	<img src="https://www.mallsyoutletsvivo.cl/vivo-imperio/wp-content/uploads/sites/4/2018/07/logo-Movistar.jpg" width= 150px height=150px>

  							</figure>
  					</div>

  					<div class="form-group">
  							<figure class="img-responsive">
  	            	<img src="https://images-na.ssl-images-amazon.com/images/I/51ZqPur7%2BLL._SX466_.jpg" width= 150px height= 150px>

  							</figure>
  					</div>

  					<div class="form-group">
  							<figure class="img-responsive">
  	            	<img src="https://www2.jumbo.cl/uploads/2019/04/logoJumbo.jpeg" width="87%" height="87%">

  							</figure>
  					</div>

  			</form>
	     </div>

	</div>
</div>

<a type="submit" class="btn btn-primary" href="/posts/<%= @post.id %>/edit">Edit</a>
