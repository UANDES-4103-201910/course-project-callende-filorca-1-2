<% title "Post" %>
<div class="container">
	<div class="row">

	    <div class="col-md-6 col-md-offset-0">

    		<h1>Edit post</h1>

    		<form action="" method="POST">

					<!-- Checkbox -->
					<div class="[ form-group ]">
            <input type="checkbox" name="fancy-checkbox-warning" id="fancy-checkbox-warning" autocomplete="off" />
            <div class="[ btn-group ]">
                <label for="fancy-checkbox-warning" class="[ btn btn-warning ]">
                    <span class="[ glyphicon glyphicon-ok ]"></span>
                    <span> </span>
                </label>
                <label for="fancy-checkbox-warning" class="[ btn btn-default active ]">
                    Closed Post
                </label>
            </div>
        </div>


    		    <div class="form-group">
    		        <label for="title">Title <span class="require">*</span></label>
    		        <input type="text" class="form-control" name="title" value = "<%= @post.title %>" >
    		    </div>

            <div class="form-group">
    		        <label for="location">Location <span class="require">*</span></label>
    		        <input type="text" class="form-control" name="location" value = "<%= @post.location %>" >
    		    </div>

            <div class="form-group">
    		        <label for="country">Country <span class="require">*</span></label>
    		        <input type="text" class="form-control" name="country" value = "<%= @post.country %>" >
    		    </div>

            <div class="form-group">
    		        <label for="city">City <span class="require">*</span></label>
    		        <input type="text" class="form-control" name="city" value = "<%= @post.city %>" >
    		    </div>

    		    <div class="form-group">
    		        <label for="description">Description <span class="require">*</span></label>
    		        <textarea rows="7" class="form-control" name="description"  >"<%= @post.description %>"
                </textarea>

    		    </div>


    		    <div class="form-group">
    		        <p><span class="require">*</span> - required fields</p>
    		    </div>

    		    <div class="form-group">

								<a type="submit" class="btn btn-primary" href="/posts/<%= @post.id %>">Update</a>

    		        <a type="submit" class="btn btn-primary" href="/posts/<%= @post.id %>">Cancel</a>

    		    </div>

    		</form>
		</div>



		<div class="col-md-4 col-md-offset-2">

			<h1>Add File</h1>

			<form action="" method="POST">

					<div class="form-group">
						<a type="submit" class="btn btn-primary" href="/posts/<%= @post.id %>/edit">Add File</a>

					</div>


					<div class="form-group">
							<figure class="img-responsive">
	            	<img src="https://cdn0.iconfinder.com/data/icons/mobile-development-svg-icons/60/Low_signal-512.png" width="50%" height="50%">

							</figure>
					</div>

					<div class="form-group">
							<figure class="img-responsive">
	            	<img src="data:image/png;base64," width="50%" height="50%">

							</figure>
					</div>

					<div class="form-group">
							<figure class="img-responsive">
	            	<img src="https://www.mockupworld.co/wp-content/uploads/edd/2018/01/free-male-hand-holding-iphone-x-mockup-psd-1000x683.jpg" width="50%" height="50%">

							</figure>
					</div>

			</form>
	</div>

	</div>
</div>
